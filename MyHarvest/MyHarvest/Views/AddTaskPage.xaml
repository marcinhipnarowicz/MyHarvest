<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyHarvest.Views.AddTaskPage"

             Title="Nowe zadanie">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                 Margin="20">
            <Label Text="Nazwa"
                   FontSize="Medium" />
            <Editor x:Name="taskName"
                   Text=""
                   FontSize="Medium"
                   AutoSize="TextChanges" />
            <Label Text="Opis"
                   FontSize="Medium" />
            <Editor x:Name="taskDescription"
                    Text=""
                    AutoSize="TextChanges"
                    FontSize="Medium"
                    Margin="0" />
            <Label Text="Powierzchnia"
                   FontSize="Medium" />
            <Editor x:Name="taskArea"
                    AutoSize="TextChanges"
                    FontSize="Medium"
                    Margin="0" />
            <Label Text="Zadanie dla"
                   FontSize="Medium" />
            <StackLayout x:Name="employeesStackLayout">
            </StackLayout>

            <Button Text="Dodaj"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand"
                    CornerRadius="{StaticResource radiusCountButton}"
                    BackgroundColor="{StaticResource backgroundButtonColor}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>